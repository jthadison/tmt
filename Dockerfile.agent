# Base Agent Service Docker Image
FROM python:3.11-slim

# Build argument for agent type
ARG AGENT_TYPE
ARG AGENT_PORT

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements for specific agent
COPY agents/${AGENT_TYPE}/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent code
COPY agents/${AGENT_TYPE}/ /app/agent/

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV AGENT_TYPE=${AGENT_TYPE}
ENV PORT=${AGENT_PORT}
ENV HOST=0.0.0.0

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:${PORT}/health').read()" || exit 1

# Run the agent
# Use uvicorn for FastAPI agents
CMD ["sh", "-c", "cd /app/agent && uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}"]