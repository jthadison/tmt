# Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# OANDA Configuration
# ============================================================================
# Get your API key from: https://www.oanda.com/account/tpa/personal_token
OANDA_API_KEY=your_api_key_here
OANDA_ACCOUNT_ID=your_account_id_here
OANDA_ENVIRONMENT=practice  # practice or live
OANDA_BASE_URL=https://api-fxpractice.oanda.com  # Use api-fxtrade.oanda.com for live

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_system
REDIS_URL=redis://localhost:6379

# ============================================================================
# Message Queue Configuration
# ============================================================================
KAFKA_BROKERS=localhost:9092

# ============================================================================
# Secrets Management
# ============================================================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token-trading-system

# ============================================================================
# Monitoring & Observability
# ============================================================================
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# ============================================================================
# Trading Configuration
# ============================================================================
# Risk Management
MAX_CONCURRENT_TRADES=3
RISK_PER_TRADE=0.02  # 2% risk per trade
MAX_DAILY_LOSS=0.06  # 6% maximum daily loss
CIRCUIT_BREAKER_THRESHOLD=0.10  # 10% loss triggers circuit breaker

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
AGENT_HEALTH_CHECK_INTERVAL=30  # seconds