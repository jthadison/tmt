# Security Keys (Generate new ones for production!)
SECRET_KEY=your-secret-key-here-minimum-32-characters-please-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here-also-minimum-32-characters-for-security
ENCRYPTION_KEY=your-encryption-key-here-32-characters-exactly-for-aes256

# Trading Configuration
TRADING_MODE=paper  # paper, live
DEFAULT_RISK_PERCENTAGE=1.0
MAX_CONCURRENT_TRADES=10
CIRCUIT_BREAKER_THRESHOLD=5

# MetaTrader Configuration
MT4_SERVER=localhost
MT4_LOGIN=12345
MT4_PASSWORD=password
MT5_SERVER=localhost
MT5_LOGIN=12345
MT5_PASSWORD=password

# Prop Firm API Keys (Keep these secure!)
FTMO_API_KEY=your-ftmo-api-key
FTMO_API_SECRET=your-ftmo-api-secret
FUNDED_NEXT_API_KEY=your-funded-next-api-key
FUNDED_NEXT_API_SECRET=your-funded-next-api-secret

# Development/Testing
DEBUG=true
LOG_LEVEL=INFO
TEST_MODE=false
MOCK_TRADING=true

# Cloud Configuration (Production)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GKE_CLUSTER_NAME=trading-cluster
GKE_ZONE=us-central1-a

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Feature Flags
ENABLE_LEARNING_AGENT=false
ENABLE_RISK_MANAGEMENT=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_PERSONALITY_ENGINE=false
ENABLE_COMPLIANCE_CHECKING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-minimum-32-characters-change-in-production
SESSION_TIMEOUT=3600

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.csv,.json,.xlsx

# Backup Configuration
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Tuning
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
EMAIL_ALERTS=true
PHONE_ALERTS=false