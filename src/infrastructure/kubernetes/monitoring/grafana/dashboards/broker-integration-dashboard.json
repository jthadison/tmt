{
  "dashboard": {
    "id": null,
    "title": "TMT Broker Integration Monitoring",
    "tags": ["tmt", "broker", "integration", "trading"],
    "style": "dark",
    "timezone": "utc",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"broker-integration\"}",
            "legendFormat": "{{pod}} Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(broker_requests_total[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 200
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(broker_errors_total[5m])) / sum(rate(broker_requests_total[5m])) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "P95 Latency",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(broker_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Order Execution Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(broker_order_execution_seconds_bucket[5m])) by (le, broker))",
            "legendFormat": "{{broker}} P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(broker_order_execution_seconds_bucket[5m])) by (le, broker))",
            "legendFormat": "{{broker}} P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(broker_order_execution_seconds_bucket[5m])) by (le, broker))",
            "legendFormat": "{{broker}} P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "pointSize": 5,
              "showPoints": "never"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "timeseries",
        "targets": [
          {
            "expr": "broker_active_connections",
            "legendFormat": "{{broker}} Active",
            "refId": "A"
          },
          {
            "expr": "broker_connection_pool_size",
            "legendFormat": "{{broker}} Pool Size",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "API Requests by Broker",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(broker_requests_total[5m])) by (broker)",
            "legendFormat": "{{broker}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Authentication Success Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(broker_auth_attempts_total{status=\"success\"}[5m])) by (broker) / sum(rate(broker_auth_attempts_total[5m])) by (broker) * 100",
            "legendFormat": "{{broker}} Success %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "broker_circuit_breaker_state",
            "legendFormat": "{{broker}}-{{component}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "CLOSED",
                    "color": "green"
                  },
                  "1": {
                    "text": "OPEN",
                    "color": "red"
                  },
                  "2": {
                    "text": "HALF-OPEN",
                    "color": "yellow"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 12
        }
      },
      {
        "id": 10,
        "title": "Order Volume by Instrument",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(broker_trade_volume_total[5m])) by (instrument, direction)",
            "legendFormat": "{{instrument}} {{direction}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 11,
        "title": "Slippage Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(broker_slippage_pips_bucket[5m])) by (le, broker)",
            "legendFormat": "{{broker}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 12,
        "title": "SLA Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "broker_sla_compliance_ratio{sla_type=\"availability\"}",
            "legendFormat": "{{broker}} Availability",
            "refId": "A"
          },
          {
            "expr": "broker_sla_compliance_ratio{sla_type=\"latency\"}",
            "legendFormat": "{{broker}} Latency",
            "refId": "B"
          },
          {
            "expr": "broker_sla_compliance_ratio{sla_type=\"error_rate\"}",
            "legendFormat": "{{broker}} Error Rate",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percentunit",
            "min": 0.9,
            "max": 1.0,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0.9
                },
                {
                  "color": "yellow",
                  "value": 0.95
                },
                {
                  "color": "green",
                  "value": 0.99
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 13,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "broker_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "{{broker}}-{{component}} MB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "MB"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 28
        }
      },
      {
        "id": 14,
        "title": "Data Freshness",
        "type": "timeseries",
        "targets": [
          {
            "expr": "broker_data_freshness_seconds",
            "legendFormat": "{{broker}} {{data_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 28
        }
      },
      {
        "id": 15,
        "title": "Rate Limit Violations",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(broker_rate_limit_hits_total[5m])) by (broker, limit_type)",
            "legendFormat": "{{broker}} {{limit_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 34
        }
      },
      {
        "id": 16,
        "title": "Recovery Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(broker_recovery_seconds_bucket[5m])) by (le, broker, failure_type))",
            "legendFormat": "{{broker}} {{failure_type}} P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 34
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "broker",
          "type": "query",
          "query": "label_values(broker_requests_total, broker)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(broker_connection_status, environment)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(broker_uptime_seconds[5m]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "Service restarted"
        }
      ]
    }
  }
}